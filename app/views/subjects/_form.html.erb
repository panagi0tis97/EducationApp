<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
          <%= form_with(model: subject, class: "shadow p-3 mb-3 bg-dark") do |form| %>
            <% if subject.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(subject.errors.count, "error") %> prohibited this subject from being saved:</h2>

                <ul>
                  <% subject.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group row mt-2">
              <%= form.label :title, class: "col-2 col-form-label text-light", value: (session[:lang].nil? or session[:lang] == 'gr')?  "Τίτλος" : "Title" %>
              <%= form.text_field :title, class: "form-control shadow rounded", placeholder: (session[:lang].nil? or session[:lang] == 'gr')?  "Όνομα μαθήματος" : "Subject's Title"  %>
              
              <%= form.label :semester_id, class: "col-2 col-form-label text-light mt-2", value: (session[:lang].nil? or session[:lang] == 'gr')?  "Εξάμηνο" : "Semester" %>
              <%= form.select :semester_id, options_for_select( Semester.all.sort_by {|s| s.id}.collect {|u| u.id}),{ :prompt => (session[:lang].nil? or session[:lang] == 'gr')?  "Εξάμηνο" : "Semester"}, {:class => "form-control shadow rounded"} %>
              
            </div>

            <div class="d-flex justify-content-between mt-5">
              <% if (session[:lang].nil? or session[:lang] == 'gr') %>
                <%= form.submit @subject.new_record? ? "Δημιουργία Μαθήματος" : "Ανανέωση Μαθήματος", class: "btn btn-outline-light", id:"submit_button" %>
              <% else %>
                <%= form.submit @subject.new_record? ? "Create Subject" : "Update Subject", class: "btn btn-outline-light", id:"submit_button" %>
              <% end %>
              <%= link_to (session[:lang].nil? or session[:lang] == 'gr')?  "Προβολή" : 'Show', @subject, class: "btn btn-outline-secondary text-light"  %>
              <a class="btn btn-outline-dark" href="<%= root_path %>"><i class="fa-solid fa-arrow-left"></i> <%=(session[:lang].nil? or session[:lang] == 'gr')? 'Πίσω': "Back"%></a>
            </div>
          <% end %>
          </div>
    </div>
</div>  