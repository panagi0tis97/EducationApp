<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info", local: true) do |f|%>
                <div class="form-group row mt-2">
                    <%= f.label :email, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                    <%= f.text_field :email, class: "form-control shadow rounded", placeholder: (session[:lang].nil? or session[:lang] == 'gr')? "Δώσε τo email σου" : "Enter your email" %>
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <%= f.label :password, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                    <%= f.password_field :password, class: "form-control shadow rounded", placeholder: (session[:lang].nil? or session[:lang] == 'gr')? "Δώσε τo password σου" : "Enter your password"   %>
                    </div>
                </div>     
                <div class="form-group mt-2">
                    <div class="d-flex justify-content-between">
                        <%= f.submit (session[:lang].nil? or session[:lang] == 'gr')? "Σύνδεση" : "Log in" , class: "btn btn-outline-light" %>
                        <%= link_to (session[:lang].nil? or session[:lang] == 'gr')? "Δημιουργία λογαριασμού" : 'Create an Account', signup_path, class: "btn btn-outline-secondary text-light" %> 
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>  